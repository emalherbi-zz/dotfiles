[user]
    name = Eduardo Malherbi
    email = emalherbi@gmail.com
[alias]
    ada = add *
    adf = add * --force
    # Displays active users in the repository in the past 6 months
    act = shortlog --numbered --summary --email --no-merges --since="6 months"
    bra = branch
    brd = branch -d
    cln = clone
    chk = checkout
    cob = checkout -b
    cim = commit -m
    dff = diff
    meg = merge
    pus = push
    sta = status -sb
    tag = tag
[color]
    diff = auto
    grep = auto
    interactive = auto
    status = auto
    branch = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[core]
	  excludesfile = /Users/emalherbi/.gitignore
[push]
    default = simple
[filter "media"]
	  clean = git media clean %f
	  smudge = git media smudge %f
    required = true
[filter "hawser"]
	  clean = git hawser clean %f
	  smudge = git hawser smudge %f
	  required = true
[filter "lfs"]
	  clean = git lfs clean %f
	  smudge = git lfs smudge %f
	  required = true
