#!/bin/bash

source common/functions.sh

# Create your here: http://patorjk.com/software/taag/#p=display&f=Graffiti&t=Type%20Something%20
msg '  _______    ______   ________  ________  ______  __        ________   ______   '
msg ' /       \  /      \ /        |/        |/      |/  |      /        | /      \  '
msg ' $$$$$$$  |/$$$$$$  |$$$$$$$$/ $$$$$$$$/ $$$$$$/ $$ |      $$$$$$$$/ /$$$$$$  | '
msg ' $$ |  $$ |$$ |  $$ |   $$ |   $$ |__      $$ |  $$ |      $$ |__    $$ \__$$/  '
msg ' $$ |  $$ |$$ |  $$ |   $$ |   $$    |     $$ |  $$ |      $$    |   $$      \  '
msg ' $$ |  $$ |$$ |  $$ |   $$ |   $$$$$/      $$ |  $$ |      $$$$$/     $$$$$$  | '
msg ' $$ |__$$ |$$ \__$$ |   $$ |   $$ |       _$$ |_ $$ |_____ $$ |_____ /  \__$$ | '
msg ' $$    $$/ $$    $$/    $$ |   $$ |      / $$   |$$       |$$       |$$    $$/  '
msg ' $$$$$$$/   $$$$$$/     $$/    $$/       $$$$$$/ $$$$$$$$/ $$$$$$$$/  $$$$$$/   '

OSX=$(test "`uname`" == "Darwin" && echo "x")

if [[ -d "$HOME/Sites/dotfiles" ]]; then
    msg_checking "Checking dotfiles directory"
else
    msg_install "Cloning" "git@github.com:emalherbi/dotfiles.git"
    git clone git@github.com:emalherbi/dotfiles.git $HOME/Sites/dotfiles
    msg_ok "OK"
fi

sh brew/global.sh

sh node/global.sh

sh ruby/global.sh

# sh sublime/global.sh

sh common/dotfiles.sh
