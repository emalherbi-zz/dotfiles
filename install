#!/bin/bash

source common/functions.sh

# Create your here: http://patorjk.com/software/taag/#p=display&f=Graffiti&t=Type%20Something%20
print ' _______    ______   ________  ________  ______  __        ________   ______  '
print '/       \  /      \ /        |/        |/      |/  |      /        | /      \ '
print '$$$$$$$  |/$$$$$$  |$$$$$$$$/ $$$$$$$$/ $$$$$$/ $$ |      $$$$$$$$/ /$$$$$$  |'
print '$$ |  $$ |$$ |  $$ |   $$ |   $$ |__      $$ |  $$ |      $$ |__    $$ \__$$/ '
print '$$ |  $$ |$$ |  $$ |   $$ |   $$    |     $$ |  $$ |      $$    |   $$      \ '
print '$$ |  $$ |$$ |  $$ |   $$ |   $$$$$/      $$ |  $$ |      $$$$$/     $$$$$$  |'
print '$$ |__$$ |$$ \__$$ |   $$ |   $$ |       _$$ |_ $$ |_____ $$ |_____ /  \__$$ |'
print '$$    $$/ $$    $$/    $$ |   $$ |      / $$   |$$       |$$       |$$    $$/ '
print '$$$$$$$/   $$$$$$/     $$/    $$/       $$$$$$/ $$$$$$$$/ $$$$$$$$/  $$$$$$/  '

if [ "$OS" = "OSX" ]; then
    print_ln 'OS X Software Updates'
    bash osx/global.sh
else
    print_ln 'Linux Software Updates'
    bash linux/global.sh
fi

while true; do
    read -p "Do you wish to install brew packages? [Y/n] " yn
    case $yn in
        [Yy]* )
          print_ln 'Install brew packages'
          bash brew/global.sh
          break;;
        [Nn]* )
          print_alert 'Brew not install by user'
          break;;
        * ) echo "Please answer Yes or No.";;
    esac
done

if [ "$OS" = "OSX" ]; then
  while true; do
      read -p "Do you wish to install cask packages? [Y/n] " yn
      case $yn in
          [Yy]* )
            print_ln 'Install cask packages'
            bash cask/global.sh
            break;;
          [Nn]* )
            print_alert 'Cask not install by user'
            break;;
          * ) echo "Please answer Yes or No.";;
      esac
  done
fi

while true; do
    read -p "Do you wish to install node packages? [Y/n] " yn
    case $yn in
        [Yy]* )
          print_ln 'Install node packages'
          bash node/global.sh
          break;;
        [Nn]* )
          print_alert 'Node not install by user'
          break;;
        * ) echo "Please answer Yes or No.";;
    esac
done

while true; do
    read -p "Do you wish to install ruby packages? [Y/n] " yn
    case $yn in
        [Yy]* )
          print_ln 'Install ruby packages'
          bash ruby/global.sh
          break;;
        [Nn]* )
          print_alert 'Ruby not install by user'
          break;;
        * ) echo "Please answer Yes or No.";;
    esac
done

while true; do
    read -p "Do you wish to configure dotfiles? [Y/n] " yn
    case $yn in
        [Yy]* )
          print_ln 'Configure dotfiles'
          bash common/dotfiles.sh
          break;;
        [Nn]* )
          print_alert 'Dotfiles configurations not install by user'
          break;;
        * ) echo "Please answer Yes or No.";;
    esac
done

# TODO
# 1>/dev/null 2>&1
