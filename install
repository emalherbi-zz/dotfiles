print '$$$$$$$/   $$$$$$/     $$/    $$/       $$$$$$/ $$$$$$$$/ $$$$$$$$/  $$$$$$/  '

if [ "$OS" = "OSX" ]; then
    print_install "OS X Software Updates" "bash osx/global.sh"
else
    print_install "Linux Software Updates" "bash linux/global.sh"
fi

print_install "brew" "bash brew/global.sh"

if [ "$OS" = "OSX" ]; then
    print_install "cask" "bash cask/global.sh"
fi

print_install "node" "bash node/global.sh"

print_install "atom" "bash atom/global.sh"

print_install "ruby" "bash ruby/global.sh"

print_install "dotfiles" "bash common/dotfiles.sh"

